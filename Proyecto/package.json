{
  "name": "usport",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"bun run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "bun run build && electron-builder",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-pattern .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit",
    "check-db": "bun db/setup.mjs",
    "seed-db": "bun db/seed.js",
    "setup": "bun install && bun run check-db && bun run format  && bun run electron:dev  && bun run lint && bun run type-check"
  },
  "dependencies": {
    "@vueuse/core": "^11.0.0",
    "axios": "^1.7.0",
    "bcryptjs": "^3.0.2",
    "pinia": "^2.2.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "vue": "^3.5.17",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@iconify/vue": "^4.1.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "unplugin-auto-import": "^0.17.0",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^7.0.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.usport.app",
    "productName": "USport",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.sports"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
